{
  // Configuração do compilador TypeScript
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node10",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}